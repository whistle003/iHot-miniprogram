/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

/* 状态栏样式 */
.status-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 12px;
  background-color: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 50;
}

.status-bar-left {
  font-size: 14px;
  font-weight: 500;
}

.status-bar-right {
  display: flex;
  gap: 4px;
}

.status-icon {
  font-size: 14px;
}

/* 标题栏样式 */
.title-bar {
  display: flex;
  align-items: center;
  padding: 16px;
  background-color: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.logo {
  margin-right: 12px;
}

.logo-circle {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background-color: #ff2121;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.logo-flame {
  width: 24px;
  height: 30px;
  background-color: white;
  border-radius: 50% 50% 5px 5px;
  position: relative;
}

.logo-flame::before {
  content: "";
  position: absolute;
  top: 10px;
  left: 6px;
  width: 12px;
  height: 12px;
  background-color: #ff2121;
  border-radius: 50%;
}

.title-content {
  display: flex;
  flex-direction: column;
}

.app-title {
  font-size: 18px;
  font-weight: 700;
  color: #333;
}

.app-subtitle {
  font-size: 12px;
  color: #999;
  margin-top: 2px;
}

/* 内容区域样式 */
.content-area {
  padding: 12px;
  margin-bottom: 60px;
}

.card {
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  background-color: #ffffff;
  margin-bottom: 12px;
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.card-header {
  padding: 12px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 15px;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.update-time {
  font-size: 10px;
  color: #999;
}

.card-body {
  background-color: #ffffff;
}

.platform-item {
  padding: 12px;
  display: flex;
  align-items: flex-start;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.platform-item:last-child {
  border-bottom: none;
}

.rank {
  width: 22px;
  height: 22px;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 14px;
  margin-right: 10px;
  flex-shrink: 0;
}

.rank-1 {
  background-color: #ff3b30;
  color: #fff;
}

.rank-2 {
  background-color: #ff9500;
  color: #fff;
}

.rank-3 {
  background-color: #ffcc00;
  color: #fff;
}

.rank-normal {
  background-color: #f0f0f0;
  color: #666;
}

.item-content {
  flex: 1;
  margin-left: 4px;
  overflow: hidden;
}

.item-title {
  font-size: 14px;
  line-height: 1.4;
  font-weight: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-info {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
  display: flex;
  align-items: center;
}

.hot {
  color: #ff6600;
  margin-right: 8px;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 12px;
  background-color: #f9f9f9;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
  font-size: 12px;
  color: #666;
}

.view-more {
  display: flex;
  align-items: center;
  color: #007aff;
  padding: 4px 8px;
  border-radius: 4px;
  transition: background-color 0.2s;
}

.view-more:active {
  background-color: rgba(0, 122, 255, 0.1);
}

.more-icon {
  margin-right: 4px;
}

.refresh-btn {
  width: 28px;
  height: 28px;
  border-radius: 14px;
  background-color: rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.refresh-icon {
  font-size: 16px;
}

.icon {
  font-size: 16px;
}

.mr-2 {
  margin-right: 8px;
}

/* 历史上的今天卡片特定样式 */
.history-card .card-footer,
.history-footer {
  display: flex !important;
  visibility: visible !important;
  opacity: 1 !important;
  background-color: #f9f9f9 !important;
  border-top: 1px solid rgba(0, 0, 0, 0.05) !important;
}

.history-card .view-more {
  color: #007aff !important;
  display: flex !important;
}

.history-card .refresh-btn {
  display: flex !important;
}

/* 新的单独底部样式 */
.separate-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 12px;
  background-color: #f9f9f9;
