.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background-color: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  font-size: 18px;
  font-weight: bold;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-nav {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder {
  width: 24px;
}

.icon {
  font-size: 18px;
}

.mr-2 {
  margin-right: 8px;
}

/* å†…å®¹åŒºåŸŸæ ·å¼ */
.content-area {
  padding: 12px;
  margin-bottom: 20px;
}

.card {
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  background-color: #ffffff;
}

.card-header {
  padding: 12px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 15px;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.update-time {
  font-size: 10px;
  color: #999;
}

/* è±†ç“£åˆ—è¡¨æ ·å¼ */
.douban-list {
  background-color: #fff;
}

.douban-item {
  padding: 16px 12px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.douban-item:last-child {
  border-bottom: none;
}

.rank {
  width: 22px;
  height: 22px;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 14px;
  margin-right: 10px;
  flex-shrink: 0;
}

.rank-1 {
  background-color: #ff3b30;
  color: #fff;
}

.rank-2 {
  background-color: #ff9500;
  color: #fff;
}

.rank-3 {
  background-color: #ffcc00;
  color: #fff;
}

.rank-normal {
  background-color: #f0f0f0;
  color: #666;
}

.douban-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 12px;
}

.movie-title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 6px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.movie-info {
  font-size: 12px;
  color: #666;
  margin-bottom: 6px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rating {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.rating-stars {
  display: flex;
}

.star-full {
  color: #ff9800;
  font-size: 14px;
}

.star-half {
  color: #ff9800;
  font-size: 14px;
  position: relative;
}

.star-empty {
  color: #ddd;
  font-size: 14px;
}

.rating-score {
  margin-left: 4px;
  font-size: 14px;
  color: #ff9800;
  font-weight: 500;
}

.rating-count {
  margin-left: 2px;
  font-size: 12px;
  color: #999;
}

.movie-summary {
  font-size: 12px;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

