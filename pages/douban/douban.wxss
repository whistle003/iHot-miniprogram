page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

