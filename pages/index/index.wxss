}

.separate-refresh-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

/* 底部导航栏样式 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 56px;
  display: flex;
  background-color: #fff;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
