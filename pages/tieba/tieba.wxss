/* tieba.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

/* Â§¥ÈÉ®Ê†∑Âºè */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background-color: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  font-size: 18px;
  font-weight: bold;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-nav {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder {
  width: 24px;
}

.icon {
  font-size: 18px;
}

.mr-2 {
  margin-right: 8px;
}

/* ÂÜÖÂÆπÂå∫ÂüüÊ†∑Âºè */
.content-area {
  padding: 12px;
  margin-bottom: 20px;
}

.card {
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  background-color: #ffffff;
}

.card-header {
  padding: 12px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 15px;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.update-time {
  font-size: 10px;
  color: #999;
}

/* Ë¥¥ÂêßÂàóË°®Ê†∑Âºè */
.tieba-list {
  background-color: #fff;
}

.tieba-item {
  padding: 12px;
  display: flex;
  align-items: flex-start;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.tieba-item:last-child {
  border-bottom: none;
}

.rank {
  width: 22px;
  height: 22px;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 14px;
  margin-right: 10px;
  flex-shrink: 0;
}

.rank-1 {
  background-color: #ff3b30;
  color: #fff;
}

.rank-2 {
  background-color: #ff9500;
  color: #fff;
}

.rank-3 {
  background-color: #ffcc00;
  color: #fff;
}

.rank-normal {
  background-color: #f0f0f0;
  color: #666;
}

.tieba-content {
  flex: 1;
  margin-right: 10px;
}

.tieba-title {
  font-size: 16px;
  line-height: 1.4;
  color: #333;
  margin-bottom: 4px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
  padding-right: 24px;
}

.tieba-title::after {
  content: "üìãüîó";
  position: absolute;
  right: 0;
  top: 2px;
  font-size: 12px;
  opacity: 0.5;
}

.tieba-info {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  margin-bottom: 6px;
}

.tieba-hot {
  color: #ff6600;
  margin-right: 8px;
  display: flex;
  align-items: center;
}

.tieba-time {
  color: #999;
}

.tieba-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tieba-cover {
  width: 80px;
  height: 60px;
  border-radius: 4px;
  object-fit: cover;
  flex-shrink: 0;
}

/* Âç°ÁâáÂ∫ïÈÉ® */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 12px;
  background-color: #f9f9f9;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.total-count {
  color: #999;
  font-size: 12px;
}

.refresh-btn {
  width: 28px;
  height: 28px;
  border-radius: 14px;
  background-color: rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

/* ÁÇπÂáªÂèçÈ¶àÊïàÊûú */
.tieba-item:active {
  background-color: rgba(0, 0, 0, 0.03);
} 